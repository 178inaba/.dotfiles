[core]
	editor = emacs
	attributesFile = ~/.dotfiles/gitattributes
[pager]
	log = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less
[alias]
	d = !git diff --color | diff-highlight | less -R
	l = !git log --color | diff-highlight | less -R
	s = !git show --color | diff-highlight | less -R
	cc = checkout .
[diff "xlsx"]
	binary = true
	textconv = git-xlsx-textconv
[include]
	path = ~/.gitconfig.local
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
